
public abstract class AirCraft {
	protected int waitTime;
	protected int takeOffTime;
	protected int landingTime;
	
	
	public AirCraft(){
		
	}
	
	public String getName(){
		if (Runway.getAirCraftQueue().equals("Glider")){
			return "Glider";
		}else if(Runway.getAirCraftQueue().equals("LightAirGraft")){
			return "LightAirCraft";
		}else if(Runway.getAirCraftQueue().equals("CommercialAircraft")){
			return "Commercial AirCraft";
		}
		return "Error";
	}
	
	public abstract void incrementWaitTime();
	
	public abstract int getWaitTime();
	
	public abstract int getTakeOffTime();
	
	public abstract int getLandingTime();
	
	public abstract void fly();
	
	public static boolean wantsToLand(){ //needs to be completed 
		return false;
	}
	
	public static boolean wantsToTakeOff(){ //needs to be completed
		return false;
	}
}
