public class LightAircraft extends Aircraft{
	//Instance Variables
	private int waitTime;
	private int takeOffTime;
	private int landingTime;
	
	//Constructor
	public LightAircraft(){
		Aircraft lightAircraft = new LightAircraft();
		int waitTime = 0;
		int takeOffTime = 2;
		int landingTime = 3;
		
	}
	//Accessor Methods
	public int getWaitTime(){
		return waitTime;
	}
	//Calculation Method
	public int incrementWaitTime(){
		return waitTime++;
	}
	public void fly(){
		Aircraft lightAircraft = new LightAircraft();
		LightAircraft.fly();
		System.out.println("lightAircraft flying");	
	}
	
	public String getName(){
		return "LightAirCraft";
	}
}
