public class Counter {
	// the name of this aircraft
	private String name;

	//the count of aircraft which have taken off
	private int takeOffCount;
	//the count of aircraft which have landed
	private int landingCount;
	//the count of the waiting time of the AirCraft
	private int waitTime;

	//Constructor for counter objects
	public Counter(String name){
		this.name = name;
		takeOffCount = 0;
		landingCount = 0;
	}

	//return the number of take offs for this plane
	public int getTakeOffCount(){
		return takeOffCount;
	}


	//return the nuymber of landings for this plane
	public int getLandingCount(){
		return landingCount;
	}

	//return the name of this aircraft
	public String getName(){
		return name;
	}
	
	//return the current waiting time
	public int getWaitingTime(){
		return waitTime;
	}

	//reset the values of both counts (probably needed for when the simulation is over, ready for the next one
	public void reset(){
		takeOffCount = 0;
		landingCount = 0;
		waitTime = 0;
	}

	//increments the number of take offs
	public void incrementTakeOff(){
		takeOffCount ++;
	}

	//increments the number of lanidngs
	public void incrementLanding(){
		landingCount ++;
	}
	
	//return the current waiting time
	public void incrementWaitTime(){
		waitTime++;
	}

}
